import numpy as np # Valores possÃ­veis da variÃ¡vel e suas probabilidades valores = np.array([0, 1, 2, 3]) probs = np.array([0.1, 0.2, 0.4, 0.3]) # EsperanÃ§a (valor esperado) esperanca = np.sum(valores * probs) # VariÃ¢ncia variancia = np.sum((valores - esperanca)**2 * probs) print(f"Valor esperado: {esperanca:.2f}") print(f"VariÃ¢ncia: {variancia:.2f}") 

